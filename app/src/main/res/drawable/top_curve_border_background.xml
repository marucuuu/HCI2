<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Default state -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#171717" /> <!-- Light background color -->
            <!-- You can add other properties like corner radius, stroke, etc. if needed -->
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#CCCCCC" /> <!-- Lighter color when pressed -->
            <!-- You can add other properties like corner radius, stroke, etc. if needed -->
        </shape>
    </item>

</selector>
